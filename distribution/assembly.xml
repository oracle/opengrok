<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <files>
      <file>
        <source>${project.basedir}/../opengrok-indexer/target/opengrok-${version}.jar</source>
        <outputDirectory>lib</outputDirectory>
        <destName>opengrok.jar</destName>
      </file>
      <file>
        <source>${project.basedir}/../plugins/target/plugins-${version}.jar</source>
        <outputDirectory>share/lib</outputDirectory>
        <destName>plugins.jar</destName>
      </file>
      <file>
        <source>${project.build.directory}/dist/opengrok-web-${version}.war</source>
        <outputDirectory>lib</outputDirectory>
        <destName>source.war</destName>
      </file>
      <file>
        <source>${project.basedir}/../tools/${project.build.directory}/dist/opengrok-tools-${project.python.package.version}.tar.gz</source>
        <outputDirectory>tools</outputDirectory>
        <destName>opengrok-tools.tar.gz</destName>
      </file>
      <file>
         <source>${project.basedir}/../tools/README-dist.txt</source>
         <outputDirectory>tools</outputDirectory>
         <destName>README.txt</destName>
      </file>
      <file>
        <source>${project.basedir}/../tools/${project.build.directory}/dist/logging.properties.template</source>
        <outputDirectory>doc</outputDirectory>
        <destName>logging.properties.template</destName>
      </file>
    </files>
    <fileSets>
        <fileSet>
          <directory>${project.basedir}/..</directory>
          <outputDirectory>doc</outputDirectory>
          <includes>
            <include>README*</include>
            <include>LICENSE*</include>
            <include>logging.properties</include>
          </includes>
        </fileSet>
        <fileSet>
          <directory>${project.build.directory}/../lib</directory>
          <outputDirectory>lib</outputDirectory>
          <includes>
            <include>*.jar</include>
          </includes>
        </fileSet>
        <fileSet>
          <directory>${project.build.directory}/dist</directory>
          <outputDirectory>lib</outputDirectory>
          <excludes>
            <!-- Already included above with version-less name. -->
            <exclude>opengrok-${version}.jar</exclude>
          </excludes>
          <includes>
            <include>*.jar</include>
          </includes>
        </fileSet>
    </fileSets>
</assembly>
